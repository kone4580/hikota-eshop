{% extends 'default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}オーナーズストア{% endblock %}
{% block sub_title %}カテゴリ別売り上げランキングブロック{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <form class="form-horizontal" method="post" action="{{ url('plugin_CategorySalesRankingBlock_config') }}">
        {{ form_widget(form._token) }}
        <div class="row" id="aside_wrap">
            <div class="col-md-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                      <div class="form-group">
                          <label class="col-sm-2 control-label">集計期間</label>
                          <div class="col-sm-9 col-lg-10 form-inline">
                              過去 {{ form_widget(form.interval_number) }} {{ form_widget(form.interval_unit) }}
                              {{ form_errors(form.interval_number) }}{{ form_errors(form.interval_unit) }}
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="col-sm-2 control-label">表示件数</label>
                          <div class="col-sm-9 col-lg-10">
                            {{ form_widget(form.num_items) }}
                            {{ form_errors(form.num_items) }}
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="col-sm-2 control-label">集計方法</label>
                          <div class="col-sm-9 col-lg-10">
                            {{ form_widget(form.aggregation_type) }}
                            {{ form_errors(form.aggregation_type) }}
                          </div>
                      </div>
                      <div class="form-group">
                          <label class="col-sm-2 control-label">商品カテゴリ</label>
                          <div class="col-sm-9 col-lg-10">
                            {{ form_widget(form.Category) }}
                            {{ form_errors(form.Category) }}
                            <div class="small text-danger">カテゴリページ以外にブロックを設置したい場合、商品カテゴリを指定して下さい</div>
                          </div>
                      </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
            <div class="col-md-3" id="aside_column">
                <div id="common_box" class="col_inner">
                    <div id="common_button_box" class="box no-header">
                        <div id="common_button_box__body" class="box-body">
                            <div id="common_button_box__edit_button" class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" type="submit">設定</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div><!-- /.col -->
        </div>
    </form>
{% endblock main %}
