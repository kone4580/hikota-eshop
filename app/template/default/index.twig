{% extends 'default_frame.twig' %}

{% set body_class = 'front_page' %}

{% block main %}
<div class="mainVisual">
  <div class="swiper-container">
    <div class="swiper-wrapper">

      <div class="swiper-slide">
        <picture>
          <source media="(max-width: 767px)" srcset="{{ app.config.front_urlpath }}/assets/images/top/main_img.jpg">
          <img src="{{ app.config.front_urlpath }}/assets/images/top/main_img.jpg" alt="top画像">
        </picture>
      </div>

      <div class="swiper-slide">
        <picture>
          <source media="(max-width: 767px)" srcset="{{ app.config.front_urlpath }}/assets/images/top/main02.jpg">
          <img src="{{ app.config.front_urlpath }}/assets/images/top/main02.jpg" alt="top画像">
        </picture>
      </div>


      <div class="swiper-slide">
        <picture>
          <source media="(max-width: 767px)" srcset="{{ app.config.front_urlpath }}/assets/images/top/main_img.jpg">
          <img src="{{ app.config.front_urlpath }}/assets/images/top/main_img.jpg" alt="top画像">
        </picture>
      </div>

    </div>

    <!-- Add Pagination -->
    <div class="swiper-pagination swiper-pagination-black"></div>
    <!-- Add Arrows -->
    <div class="swiper-button-next swiper-button-black"></div>
    <div class="swiper-button-prev swiper-button-black"></div>
  </div>
</div>
{% endblock %}
